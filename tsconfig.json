{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "noEmit": true,
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  },
  "lib": ["es6"],
  "include": ["**/*"]
}
