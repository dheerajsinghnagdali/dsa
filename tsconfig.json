{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "rootDir": "./src",
    "outDir": "./build",
    "noEmitOnError": true
  },
  "lib": ["es6"],
  "include": ["./src/**/*"]
}
